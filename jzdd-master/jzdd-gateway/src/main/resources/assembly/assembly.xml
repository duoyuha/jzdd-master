			<!--<directory>${project.basedir}/src/main/resources/lib/</directory>-->
			<!--<includes>-->
				<!--<include>**/*.jar</include>-->
			<!--</includes>-->
			<!--<outputDirectory>lib</outputDirectory>-->
			<!--<fileMode>0755</fileMode>-->
		<!--</fileSet>-->

	</fileSets>
	
	<!-- 依赖包 ：此处将所有jar包打包到lib目录中-->
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	
</assembly>